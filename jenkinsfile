pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh "docker-compose build"
            }
        }
        stage('docker-compose') {
            steps {
                sh "docker-compose up -d"
                sh 'docker logs -t $(docker-compose ps -q cerberus)'
            }
        }
    }
    post {
        always {
            sh 'sudo docker system prune -a -f'
            echo 'Bye bye!!!'
        }
    }
}