pipeline {
    agent {
        dockerfile {
            args '-v /home/bruno:/home/bruno'
        }
    }
    stages {
        stage('build') {
            steps {
                sh 'whoami'
                sh 'id'

                sh 'ls -lrt'
                sh 'ls /home/bruno'
                sh 'ls /home/bruno/documents'

                sh 'python src/main.py'
            }
        }
    }
}