pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh "docker compose up -d"
            }
        }
        stage('execute') {
            steps {
                sh 'docker exec -t cerberus python src/main.py'
            }
        }
    }
    post {
        always {
            sh 'docker compose down'
            echo 'Bye bye!!!'
        }
    }
}