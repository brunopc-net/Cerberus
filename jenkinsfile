pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh "docker compose up -d"
            }
        }
        stage('execute') {
            steps {
                sh "docker start cerberus"
                sh "docker exec -t cerberus python src/main.py $HOME/documents"
            }
        }
    }
    post {
        always {
            sh 'docker compose down'
            echo 'Bye bye!!!'
        }
    }
}