pipeline {
    agent none
    stages {
         stage('Redis') {
            agent {
                docker {
                    image 'redis:7.0-alpine'
                }
            }
            steps {
                sh 'redis-server'
                sh 'redis-cli ping'
            }
        }
        stage('build') {
            agent {
                dockerfile {
                    args '-v /home/bruno:/home/bruno'
                }
            }
            steps {
                sh 'python src/main.py'
            }
        }
    }
}