pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh "docker compose up -d"
            }
        }
        stage('execute') {
            steps {
                sh "docker run -v /home/bruno:/home/bruno:ro -t cerberus-cerberus  python src/main.py"
            }
        }
    }
    post {
        always {
            sh 'docker compose down'
            echo 'Bye bye!!!'
        }
    }
}